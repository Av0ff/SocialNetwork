@model ProfileViewModel

<h2>Change Profile</h2>

<form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
	@if(Model.Profile.Picture != null)
	{
		<img id="pic" src="data:image/*;base64, @Convert.ToBase64String(Model.Profile.Picture)" style="width:200px; height: 200px" />
	}
	else
	{
		<img id="pic" src=".." style="width:200px;height:200px">
	}
	<input type="file"
		accept=".png, .jpg, .jpeg, .gif, .tif"
		asp-for="Profile.Picture"
		style="border: 0px; padding: 0px; color: #b9b4c5"
		onchange="document.getElementById('pic').src = window.URL.createObjectURL(this.files[0])"/>
	<h3>First Name: <input type="text" asp-for="Profile.FirstName" value="@Model?.Profile.FirstName"/></h3>
	<h3>Last Name: <input type="text" asp-for="Profile.LastName" value="@Model?.Profile.LastName" /></h3>
	<h3>Birth: <input type="text" asp-for="Profile.Birth" value="@Model?.Profile.Birth" /></h3>
	<h3>Status: <input type="text" asp-for="Profile.Status" value="@Model?.Profile.Status" /></h3>

	<input type="submit" value="Safe" />
</form>